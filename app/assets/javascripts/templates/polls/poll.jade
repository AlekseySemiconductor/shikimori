.b-poll(
  data-id=model.id
)
  .poll
    .name= model.name
    .text!= model.text_html

  .poll-variants
    for poll_variant in model.variants
      if model.state == 'started' || model.voted
        .poll-variant.pending
          label.b-radio
            input(
              name='poll_' + model.id
              type='radio'
            )
            .radio-label
              = poll_variant.label

      else
        .poll-variant.result
          .votes-total= poll_variant.votes_total
          .votes-percent #{poll_variant.votes_percent}%
          label= poll_variant.label

          .bar.simple.horizontal
            .line
              if poll_variant.votes_percent <= 80 && poll_variant.votes_percent > 60
                .bar.s1(
                  style='width: ' + poll_variant.votes_percent + '%'
                )
              else if poll_variant.votes_percent <= 60 && poll_variant.votes_percent > 30
                .bar.s2(
                  style='width: ' + poll_variant.votes_percent + '%'
                )
              else if poll_variant.votes_percent <= 30
                .bar.s3(
                  style='width: ' + poll_variant.votes_percent + '%'
                )
              else
                .bar.s0(
                  style='width: ' + poll_variant.votes_percent + '%'
                )
