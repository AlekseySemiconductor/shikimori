header.head
  h1 = @page_title.last
  .notice = t '.notice'
  = render partial: 'application/breadcrumbs', object: @breadcrumbs

table.b-table.b-editable_grid
  thead
    tr
      th = Genre.human_attribute_name :position
      - if can? :manage, Genre
        th ID
        th MAL_ID
      th Name EN
      th Name RU
      th = Genre.human_attribute_name :type
      th.text Description RU
      - if can? :edit, Genre
        th.actions Actions

  tbody
    - @collection.each do |genre|
      tr
        td = genre.position
        - if can? :manage, Genre
          td = genre.id
          td = genre.mal_id
        td = genre.name
        td = genre.russian
        td = genre.kind_text
        td.text == truncate_html(BbCodes::Text.call(genre.description),
          length: 50,
          separator: ' ',
          word_boundary: /\S[\.\?\!<>]/)
        - if can? :edit, Genre
          td.actions
            a href="#{edit_genre_url genre}" edit
