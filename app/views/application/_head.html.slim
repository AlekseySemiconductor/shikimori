link rel="search" type="application/opensearchdescription+xml" title="#{Site::DOMAIN}" href="/search.xml"
link rel="yandex-tableau-widget" href="http://#{Site::DOMAIN}/yandex-tableau-widget-manifest.json"

- if defined?(@next_page) && !@next_page.blank?
  link rel="next" href="#{{@next_page}}"

- if defined?(@prev_page) && !@prev_page.blank?
  link rel="prev" href="#{{@prev_page}}"

- if defined?(@canonical) && !@canonical.blank?
  link rel="canonical" href="#{{@canonical}}"

- if defined?(@current_page) && @current_page > 1
  - @meta_tags[:title] = (@meta_tags[:title].class == Array ? @meta_tags[:title] << "Страница #{@current_page}" : "Страница #{@current_page} / #{@meta_tags[:title]}")

= display_meta_tags site: 'Шикимори', separator: '/', reverse: true
= csrf_meta_tag

= stylesheet_link_tag :application, media: 'all', data: { 'turbolinks-track' => ''}
- if anime_online?
  = stylesheet_link_tag 'anime_online/application', media: 'all', data: { 'turbolinks-track' => ''}
- elsif manga_online?
  = stylesheet_link_tag 'manga_online/application', media: 'all', data: { 'turbolinks-track' => ''}

= yield :head

= javascript_include_tag :core, data: { 'turbolinks-track' => ''}
= javascript_include_tag :application, data: { 'turbolinks-track' => ''}
- if anime_online?
  = javascript_include_tag 'anime_online/application', data: { 'turbolinks-track' => ''}
- elsif manga_online?
  = javascript_include_tag 'manga_online/application', data: { 'turbolinks-track' => ''}

javascript:
  window.IS_LOGGED_IN = #{user_signed_in? ? 'true' : 'false'};
- if Rails.env.production?
  = render partial: "application/counters/#{domain_folder}"
