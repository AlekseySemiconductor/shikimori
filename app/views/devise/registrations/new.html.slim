header.head.m15
  h1 = t '.title'
  p.notice = t '.notice'

= simple_form_for(resource, as: :user, url: registration_path(:user), html: { multipart: true }) do |f|
  - if f.object.errors.any? || flash[:recaptcha_error].present?
    .b-errors
      .subheadline.m5 = t 'form_errors'
      .block
        - if f.object.errors.any?
          p == f.object.errors.full_messages.join('<br>')
        - if flash[:recaptcha_error].present?
          p = flash[:recaptcha_error]

  .block
    = f.input :nickname,
      input_html: {\
        autocorrect: 'none',
        autocapitalize: 'none',
        spellcheck: false,
        autofocus: true\
      }
    = f.input :email,
      input_html: {\
        autocorrect: 'none',
        autocapitalize: 'none',
        spellcheck: false\
      }
    = f.input :password

  .block
    - if @show_checkbox_recaptcha || !Shikimori::IS_RECAPTCHA_V3
      = recaptcha_tags
    - else
      = recaptcha_v3 action: 'sign_up', site_key: Rails.application.secrets.recaptcha[:v3][:site_key]

  .block
    = f.button :magic_submit
    a.cancel href=new_user_session_url = t '.sign_in'
    a.cancel href=new_user_password_url = t '.forgot_password'

  = render 'devise/social'
