doctype html
html
  head
    = render partial: 'application/head'
  body class="p-#{controller_name} p-#{controller_name}-#{action_name} #{page_border} #{'no-smileys' if user_signed_in? && !current_user.preferences.show_smileys?}" id="#{controller_name}_#{action_name}" style="#{body_background}"
    - if defined?(notice) && notice
      p.flash-notice
        == notice
    - if defined?(alert) && alert
      p.flash-alert
        == alert
    header.l-top_menu
      = render partial: 'application/top_menu'

    section.l-page *itemprop style="#{page_background}"
      - if Rails.env.development?
        javascript:
          window.DEVELOP = true;

      - if user_signed_in? && current_user.admin? && !Rails.env.development?
        javascript:
          $(function() {
            $('.admin_panel').load('/apanel');
          });
          $('.admin_panel .reload').live('click', function() {
            $(this).hide();
            $('.admin_panel').load('/apanel');
          });
        .admin_panel

      = yield

      footer.l-footer
        = render partial: 'application/footer'

    #shade
    .b-to-top
      .slide
      .arrow ↑
    .feedback-hover-activator
    span.feedback data-remote="true" data-action="#{feedback_pages_url}" data-type="html"
      .graphics-feedback title="Оставить отзыв"
    | <!--noindex-->
    = yield :form
    | <!--/noindex-->
    = yield :tail
