.changes
  - if authors.empty? && entry.source.blank?
    - unless entry.object.description_mal.blank? || default_source.blank?
      .b-contributors
        .key Источник:
        .val
          a href="#{default_source}" rel="nofollow" myanimelist.net
  - else
    = render partial: 'blocks/contributors', locals: { entry: entry, authors: authors, field: field }, formats: :html
    - unless entry.source.blank?
      .b-contributors
        .key Источник:
        .val
          == source_link entry.source
