- if topic_view.topic.linked.user_id != current_user&.id
  .footer-vote
    .notice Эта рецензия полезна?
    .vote-group
      .vote.yes.to-process[
        class="#{:selected if user_signed_in? && topic_view.topic.linked.voted_yes?(current_user)} #{:deselected if user_signed_in? && topic_view.topic.linked.voted_no?(current_user)}"
        data-action="#{vote_yes_url id: topic_view.topic.linked.id, type: topic_view.topic.linked.class.name}"
        data-dynamic="authorized"
        data-method="post"
        data-remote="true"
        data-type="json"
      ] Да
      .separator
      .vote.no.to-process[
        class="#{:selected if user_signed_in? && topic_view.topic.linked.voted_no?(current_user)} #{:deselected if user_signed_in? && topic_view.topic.linked.voted_yes?(current_user)}"
        action="#{vote_no_url id: topic_view.topic.linked.id, type: topic_view.topic.linked.class.name}"
        data-dynamic="authorized"
        data-method="post"
        data-remote="true"
        data-type="json"
      ] Нет
