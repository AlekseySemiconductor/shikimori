= render layout: 'page' do
  .b-options-floated
    a href=video_reports_profile_url
      = i18n_io 'video_report', :few

    span.link.selected
      = i18n_io 'video_change', :few

  h2.subheadline = og.headline
  .block
    - if @collection.any?
      = render partial: 'versions/version',
        collection: @collection
    - else
      p.b-nothing_here = t '.no_content_changes'

    - if @collection.size == controller.class::VERSIONS_LIMIT
      = render 'blocks/postloader',
        filter: 'b-log_entry',
        next_url: current_url(page: @page + 1)

