/ важно заново выбрать юзера из базы, т.к. юзер может быть в процессе смены никнейма
= simple_form_for @resource.object,
    url: profile_url(User.find(@resource.id)) do |f|
  input type='hidden' name='page' value=@page

  .cc-2
    .c-column.block_m
      .block
        = f.input :nickname,
          input_html: {\
            autocorrect: 'none',
            autocapitalize: 'none',
            spellcheck: false\
          }
        = f.input :email, input_html: { disabled: true }

        .change-password
          a href=edit_profile_url(@resource, page: 'password')
            = t '.change_email_and_password'

        = f.input :name
        = f.input :location
        = f.input :website
        = f.input :sex, as: :select, collection: [:male, :female]
        = f.input :birth_on,
          include_blank: true,
          start_year: Time.zone.today.year - 90,
          end_year: Time.zone.today.year - 8

    .c-column.block_m
      .block
        = f.input :locale, include_blank: false

        - if I18n.russian?
          = f.simple_fields_for :preferences do |fp|
            = fp.input :russian_genres
            = fp.input :russian_names

      .block
        = f.input :avatar, hint: '160x160'
        .avatar-edit
          - if @resource.avatar.exists?
            img[
              src=@resource.avatar_url
              alt=@resource.nickname
              title=@resource.nickname
            ]

      - if @resource.user_tokens.any?
        .block
          .subheadline = t '.connected_accounts'
          .value.oauth.remove
            - @resource.user_tokens.each do |token|
              a.b-oauth_token[
                class=token.provider
                href=user_token_url(token)
                title=t('.disable_authentication', provider: token.provider.to_s.titleize)
                data-confirm="#{t('.disable_authentication', provider: token.provider.to_s.titleize)}?"
                data-method='delete'
              ]

      - if @resource.unconnected_providers.any?
        .block
          .subheadline = t '.not_connected_accounts'
          .value.oauth.add
            - @resource.unconnected_providers.each do |provider|
              a.b-oauth_token[
                class=provider
                href=send(:"user_#{provider}_omniauth_authorize_url")
                title=t('.enable_authentication', provider: provider.to_s.titleize)
              ]

  .buttons
    a.cancel href=profile_url(@resource) = t 'actions.cancel'
    = f.button :magic_submit
