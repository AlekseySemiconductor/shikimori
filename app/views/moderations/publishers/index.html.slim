header.head
  h1 = og.headline
  .notice = t '.notice'
  = render 'application/breadcrumbs'

table.b-table.b-editable_grid.block2
  thead
    tr
      = th field: :id
      th
      = th field: :name

  tbody
    - @collection.each do |publisher|
      tr
        td.id
          a href=edit_moderations_publisher_url(publisher) ##{publisher.id}
        td.id
          a.catalog-link href=mangas_collection_url(publisher: publisher.to_param)
        td
          a href=edit_moderations_publisher_url(publisher)
            = publisher.name

= render 'db_entries/versions', collection: @versions
