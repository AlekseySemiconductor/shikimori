- comments_count = club.maybe_topic(locale_from_host).comments_count

.b-club.c-colum[
    id="#{club.id}"
    class="#{content_by} #{:censored if club.censored?}"
  ]
  - if content_by == :detailed
    a href="#{club_url club, subdomain: false}" title="#{club.name}"
      img.logo[
        src="#{cdn_image club, :x48}"
        srcset="#{cdn_image club, :x96} 2x"
        alt="#{club.name}"
        title="#{club.name}"
      ]
    a.name href="#{club_url club, subdomain: false}" title="#{club.name}"
      = club.name
    .info
      span.grouped
        span.number #{club.members_count}
        span.value = i18n_i 'member', club.members_count
      span.grouped
        span.number
          = number_with_delimiter comments_count, delimiter: ' '
        span.value
          - if comments_count < 1000
            = i18n_i 'comment', comments_count
          - else
            = i18n_i 'comment', :many
    .info.author
      .b-user16
        a href="#{profile_url club.owner}" title="#{club.owner.nickname}"
          img[
            src="#{club.owner.avatar_url 16}"
            srcset="#{club.owner.avatar_url 32} 2x"
            alt="#{club.owner.nickname}"
            title="#{club.owner.nickname}"
          ]
          span = club.owner.nickname

  - elsif content_by == :avatar
    a href="#{club_url club, subdomain: false}" title="#{club.name}"
      img.logo[
        src="#{cdn_image club, :x48}"
        srcset="#{cdn_image club, :x96} 2x"
        alt="#{club.name}"
        title="#{club.name}"
      ]

  - else
    - raise ArgumentError, content_by
