                  <%#<% end % >%>
                </div>
                <div class="image">
                  <%=link_to(cosplayer_path(@cosplayers[k], gallery), :only_path => false) do %>
                    <img class="img" src="<%=gallery.images.first.image.url(:preview) %>" />
                    <!--<div style="background: url(<%=gallery.images.first.url %>)"></div>-->
                  <% end %>
