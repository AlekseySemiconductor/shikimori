- entry.genres.uniq(&:name).each do |genre|
  - if user_signed_in?
    a.b-tag[
      class="#{:bubbled if genre.description}"
      href="#{entry.collection_url genre: genre}"
      data-href="#{tooltip_genre_url genre}"
      data-predelay="350"
    ] = localization_span genre

  - else
    span.b-tag[
      class="#{:bubbled if genre.description}"
      data-delay="150"
      data-href="#{tooltip_genre_url genre}"
      itemprop="genre"
    ] = localization_span genre
