= render layout: 'page' do
  .b-options-floated.mobile-phone_portrait
    span.link.selected = t '.all_summaries'
      span.brackets = @resource.maybe_topic(locale_from_domain).summaries_count

    a href="#{@resource.comments_url}" = t '.all_comments'
      span.brackets = @resource.comments_count
  .subheadline.m3 = @page_title.last

  div
    .b-topic.to-process[
      data-dynamic='topic'
      data-no-faye='true'
    ]
      = render 'topics/comments',
        comments_view: @resource.main_topic_view.comments_view
